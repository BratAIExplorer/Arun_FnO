FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY web/backend/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy original trading engine (read-only reference â€” do not modify)
COPY src/ /app/src/
COPY config.json /app/config.json
COPY requirements.txt /app/bot_requirements.txt
RUN pip install --no-cache-dir -r /app/bot_requirements.txt

# Copy web platform
COPY web/backend/ /app/web/backend/
COPY web/frontend/ /app/web/frontend/

# Create data directory
RUN mkdir -p /app/data /app/logs

WORKDIR /app/web/backend

ENV PYTHONPATH=/app

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
